/**list.wxss**/
.items{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  margin-bottom: 40px;
  background: #fff;
}
.items .item .product{
  display: block;
  width: 160px;
  height: 160px;
  margin: 0 auto;
}
.item-content{
  float:left;
  width:calc(100%);
  height:100%;
}
.item-content .box{
  height:calc(100%);
  padding:10px 0 0 10px;
  overflow: scroll;
}
.item-content .box.active{
  padding-bottom:50px;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:80px;
  padding:10px 0 10px 10px;
  margin-bottom:10px;
  background:rgb(255, 255, 255);
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
  font-size:16px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}
.item-content .box .item .price{
  color:red;
  font-size:18px;
  margin-bottom:5px;
}
.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-10px 10px 0 0;
  padding:5px 5px;
  font-size:14px;
  color:#fff;
  background:orange;
  border-radius:20px;
}
.item-content .box .item .btn.active{
  background:#ccc;
}
.price{
  display: flex;
  margin:0 10px;
  justify-content:space-between;
}
.price text{
  font-size: 16px;
  color: #ff5f19;
}

.price image{
  width: 20px;
  height: 20px;
  padding-top: 2px;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:red;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:orange;
}
.cart{
  width: 20px;
  height: 20px;
  margin: -5px 10px 0px 80px;
}
